<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="lfy">
	<schema id="@APP_ID@" path="/cool/ldr/lfy/">
		<key type="ai" name="window-size">
			<default>[800, 300]</default>
			<description>Window size</description>
		</key>
		<key type="b" name="auto-check-update">
			<default>true</default>
			<description>Automatically check the new version of the software upon startup</description>
		</key>
		<key type="b" name="notify-translation-results">
			<default>true</default>
			<description>After the translation is completed, a system notification is automatically sent</description>
		</key>
		<key type="s" name="color-scheme">
			<choices>
				<choice value="auto" />
				<choice value="light" />
				<choice value="dark" />
			</choices>
			<default>"auto"</default>
			<description>theme</description>
		</key>
		<key type="s" name="server-selected-key">
			<default>"baidu"</default>
			<description>The currently selected translation service</description>
		</key>
		<key type="i" name="lang-selected-n">
			<default>0</default>
			<description>The currently selected translation language</description>
		</key>
		<key type="s" name="server-sk-baidu">
			<default>"app_id | secret_key"</default>
			<description>Baidu app_id and secret_key, used in the middle | split</description>
		</key>
		<key type="s" name="server-sk-baidu-ocr">
			<default>"API Key | Secret Key"</default>
			<description>Baidu API Key and Secret Key for ocr, used in the middle | split</description>
		</key>
		<key type="s" name="ocr-baidu-token">
			<default>""</default>
			<description>Baidu OCR access_token</description>
		</key>
		<key type="i" name="ocr-baidu-token-expires-date">
			<default>0</default>
			<description>Baidu OCR access_token expires date</description>
		</key>
		<key type="s" name="server-sk-aliyun">
			<default>"AccessKey ID | AccessKey Secret"</default>
			<description>aliyun AccessKey ID and AccessKey Secret, used in the middle | split</description>
		</key>
		<key type="s" name="server-sk-tencent">
			<default>"secret_id | secret_key"</default>
			<description>Tencent secret_id and secret_key, used in the middle | split</description>
		</key>
		<key type="s" name="vpn-addr-port">
			<default>""</default>
			<description>VPN address and port</description>
		</key>
	</schema>
</schemalist>